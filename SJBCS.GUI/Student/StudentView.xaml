<UserControl x:Class="SJBCS.GUI.Student.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SJBCS.GUI.Student"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <materialDesign:ColorZone Grid.Column="0"
                                  Background="White"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  BorderBrush="#B5B5B5"
                                  BorderThickness="0 0 .5 0"
                                  MinWidth="200">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Book"
                                                 Foreground="LightGray"
                                                 Height="25"
                                                 Width="25"
                                                 Margin="5 0 0 0"
                                                 VerticalAlignment="Center" />
                        <TextBlock FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left">
                                <Run Text="Student List" />
                        </TextBlock>
                    </StackPanel>
                    <ListBox>
                        <ListBoxItem BorderBrush="#e9ebee"
                                     BorderThickness="0 .5 0 .5">
                            <StackPanel Orientation="Horizontal">
                                <Image VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Height="50"
                                       Width="50"
                                       Stretch="UniformToFill"
                                       Source="/SJBCS.GUI;component/Image/default-user-image.png" />
                                <StackPanel>
                                    <TextBlock FontFamily="Segoe UI"
                                               FontWeight="SemiBold"
                                               FontSize="12"
                                               Margin="5"
                                               VerticalAlignment="Center"
                                               TextAlignment="Left"
                                               TextWrapping="Wrap"
                                               MaxWidth="200">
                                <Run Text="John Kenneth" />
                                <Run Text="Arrojo" />
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountCardDetails"
                                                                 VerticalAlignment="Center"
                                                                 Margin="5 0 0 0" />
                                        <TextBlock FontFamily="Segoe UI"
                                                   FontWeight="Regular"
                                                   FontSize="12"
                                                   Foreground="LightGray"
                                                   Margin="5"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Left">
                                <Run Text="5210299" />
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
        <materialDesign:ColorZone Grid.Column="1"
                                  Background="White"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  BorderBrush="#B5B5B5"
                                  BorderThickness=".5 0 .5 0"
                                  Margin="5 0 0 0">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountBoxOutline"
                                                 Foreground="LightGray"
                                                 Height="25"
                                                 Width="25"
                                                 Margin="5 0 0 0"
                                                 VerticalAlignment="Center" />
                        <TextBlock FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left">
                                <Run Text="Student Information" />
                        </TextBlock>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Height="150"
                               Width="150"
                               Stretch="UniformToFill"
                               Source="/SJBCS.GUI;component/Image/default-user-image.png" />
                        <StackPanel>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Margin="5"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <Run Text="John Kenneth" />
                                <Run Text="Arrojo" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <Run Text="5210299" />
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <ScrollViewer Height="400">
                        <StackPanel>
                            <materialDesign:ColorZone Background="LightGray"
                                                      HorizontalAlignment="Stretch"
                                                      Height="10" />
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FormatListBulletedType"
                                                         Foreground="LightGray"
                                                         Height="20"
                                                         Width="20"
                                                         Margin="5 0 0 0"
                                                         VerticalAlignment="Center" />
                                <TextBlock FontFamily="Segoe UI"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Margin="5"
                                           VerticalAlignment="Center"
                                           TextAlignment="Left">
                                <Run Text="Basic Information" />
                                </TextBlock>
                            </StackPanel>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Grade 1" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center">
                                <Run Text="Level" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Diamond" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center">
                                <Run Text="Section" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Male" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 5"
                                       VerticalAlignment="Center">
                                <Run Text="Gender" />
                            </TextBlock>
                            <materialDesign:ColorZone Background="LightGray"
                                                      HorizontalAlignment="Stretch"
                                                      Height="10" />
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cake"
                                                         Foreground="LightGray"
                                                         Height="20"
                                                         Width="20"
                                                         Margin="5 0 0 0"
                                                         VerticalAlignment="Center" />
                                <TextBlock FontFamily="Segoe UI"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Margin="5"
                                           VerticalAlignment="Center"
                                           TextAlignment="Left">
                                <Run Text="Birthdate" />
                                </TextBlock>
                            </StackPanel>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="11/04/1992" />
                            </TextBlock>
                            <materialDesign:ColorZone Background="LightGray"
                                                      HorizontalAlignment="Stretch"
                                                      Height="10" />
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MapMarker"
                                                         Foreground="LightGray"
                                                         Height="20"
                                                         Width="20"
                                                         Margin="5 0 0 0"
                                                         VerticalAlignment="Center" />
                                <TextBlock FontFamily="Segoe UI"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Margin="5"
                                           VerticalAlignment="Center"
                                           TextAlignment="Left">
                                <Run Text="Address" />
                                </TextBlock>
                            </StackPanel>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Prenza 2" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center">
                                <Run Text="Street" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Marilao" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 0"
                                       VerticalAlignment="Center">
                                <Run Text="City" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="12"
                                       Margin="5"
                                       VerticalAlignment="Center">
                                <Run Text="Bulacan" />
                            </TextBlock>
                            <TextBlock FontFamily="Segoe UI"
                                       FontWeight="Regular"
                                       FontSize="10"
                                       Foreground="LightGray"
                                       Margin="5 0 0 5"
                                       VerticalAlignment="Center">
                                <Run Text="Province" />
                            </TextBlock>
                        </StackPanel>

                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
        <materialDesign:ColorZone Grid.Column="2"
                                  Background="White"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  BorderBrush="#B5B5B5"
                                  BorderThickness=".5 0 .5 0"
                                  Margin="5 0 0 0"
                                  MinWidth="250">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cellphone"
                                                 Foreground="LightGray"
                                                 Height="20"
                                                 Width="20"
                                                 Margin="5 0 0 0"
                                                 VerticalAlignment="Center" />
                        <TextBlock FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left">
                                <Run Text="Contacts" />
                        </TextBlock>
                    </StackPanel>
                    <ItemsControl>
                        <ItemsControl.Items>
                            <Button Content="Hello" />
                        </ItemsControl.Items>
                    </ItemsControl>
                    <!--<DataGrid ItemsSource="{Binding Student.Contact}">
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid>-->
                    <materialDesign:ColorZone Background="LightGray"
                                              HorizontalAlignment="Stretch"
                                              Height="10" />
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Trophy"
                                                 Foreground="LightGray"
                                                 Height="20"
                                                 Width="20"
                                                 Margin="5 0 0 0"
                                                 VerticalAlignment="Center" />
                        <TextBlock FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left">
                                <Run Text="Clubs &amp; Organizations" />
                        </TextBlock>
                    </StackPanel>
                    <TextBlock FontFamily="Segoe UI"
                               FontWeight="Regular"
                               FontSize="12"
                               Margin="5"
                               VerticalAlignment="Center"
                               TextAlignment="Left">
                                <Run Text="Scanner is disconnected."
                                     Foreground="Red" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
