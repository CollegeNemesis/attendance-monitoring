<UserControl x:Class="SJBCS.GUI.Home.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:SJBCS.GUI.Converters"
             xmlns:local="clr-namespace:SJBCS.GUI.Home"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <UserControl.Resources>
        <converter:PasswordBoxConverter x:Key="pwdConverter" />
    </UserControl.Resources>
    <materialDesign:ColorZone Mode="PrimaryMid"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
        <Grid>
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <materialDesign:ColorZone Margin="16,0,0,5"
                                          Padding="8,4,8,4"
                                          Panel.ZIndex="1"
                                          CornerRadius="2"
                                          Mode="Standard">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Account"
                                                 Opacity=".56"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />
                        <TextBox Grid.Column="1"
                                 MinWidth="200"
                                 Margin="8,0,0,0"
                                 VerticalAlignment="Center"
                                 materialDesign:HintAssist.Hint="Username"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 BorderThickness="0"
                                 Text="{Binding Username}" />
                    </Grid>
                </materialDesign:ColorZone>
                <materialDesign:ColorZone Margin="16,0,0,0"
                                          Padding="8,4,8,4"
                                          Panel.ZIndex="1"
                                          CornerRadius="2"
                                          Mode="Standard">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Lock"
                                                 Opacity=".56"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />
                        <PasswordBox x:Name="Password"
                                     Grid.Column="1"
                                     MinWidth="200"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0" />
                    </Grid>
                </materialDesign:ColorZone>
                <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=Password, Converter={StaticResource pwdConverter}}"
                        ToolTip="Login"
                        HorizontalAlignment="Center"
                        Content="LOGIN"
                        Margin="0 10 0 0" />
            </StackPanel>
        </Grid>
    </materialDesign:ColorZone>
</UserControl>
